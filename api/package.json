{
  "name": "lxp-api",
  "version": "1.0.0",
  "description": "api pour le projet lxp",
  "main": "dist/server.js",
  "scripts": {
    "wait-for-db": "npx ts-node check-test-db.ts",
    "docker:up": "cd tests && docker-compose up -d && cd ..",
    "docker:down": "cd tests && docker-compose down && cd ..",
    "test": "npm run docker:up && npm run wait-for-db && dotenv -e .env.test -- npx prisma db push --force-reset && dotenv -e .env.test -- npm run reset-mongo && dotenv -e .env.test -- npx ts-node src/fixtures-prisma-test && dotenv -e .env.test -- jest -i && npm run docker:down",
    "build": "tsc --project ./",
    "start:dev": "NODE_ENV=development nodemon src/server.ts",
    "start:prod": "NODE_ENV=production node dist/src/server.js",
    "reset-mongo": "npx ts-node src/fixtures.ts",
    "reset-prisma": "npx prisma db push --force-reset && npx prisma db push && npx ts-node src/fixtures-prisma.ts",
    "fixtures": "npm run reset-mongo && npm run reset-prisma",
    "elastic-search": "npx ts-node src/elastic-search/generate-indices/generate-all-indices.ts",
    "prisma-generate": "npx prisma generate"
  },
  "author": "studio@step.eco",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.10.0",
    "@prisma/client": "^5.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "accesscontrol": "^2.2.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.18.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "jest": "^29.5.0",
    "prisma": "^5.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
